{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true
    // Ensure that Babel can safely transpile files in the TypeScript project
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
